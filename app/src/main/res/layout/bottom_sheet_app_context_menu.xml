<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Ein "Handle", der dem Nutzer anzeigt, dass das Sheet verschiebbar ist. Verbessert die UX. -->
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Der Titel, der den Namen der ausgewählten App anzeigt. -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        tools:text="Name der Anwendung" />

    <!-- Die Liste, die die eigentlichen Menüpunkte (Shortcuts und Aktionen) enthält. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contextMenuItemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="4"
        tools:listitem="@layout/item_context_menu_action" />

</LinearLayout>